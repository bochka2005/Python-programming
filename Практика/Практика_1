      "source": [
        "import random\n",
        "\n",
        "def monty_hall_simulation(num_simulations, change_choice):\n",
        "    wins = 0\n",
        "\n",
        "    for _ in range(num_simulations):\n",
        "        doors = [0, 0, 1]  # 0 - козел, 1 - автомобиль\n",
        "        random.shuffle(doors)\n",
        "\n",
        "        player_choice = random.choice([0, 1, 2])\n",
        "\n",
        "        available_doors = []\n",
        "        for door in [0, 1, 2]:\n",
        "            if door != player_choice and doors[door] == 0:\n",
        "                available_doors.append(door)\n",
        "\n",
        "        door_opened = random.choice(available_doors)\n",
        "\n",
        "        if change_choice:\n",
        "            remaining_doors = [door for door in [0, 1, 2]\n",
        "                             if door != player_choice and door != door_opened]\n",
        "            final_choice = remaining_doors[0]\n",
        "        else:\n",
        "            final_choice = player_choice\n",
        "\n",
        "        if doors[final_choice] == 1:\n",
        "            wins += 1\n",
        "\n",
        "    return (wins / num_simulations) * 100\n",
        "\n",
        "# Основная программа\n",
        "print(\"ПАРАДОКС МОНТИ ХОЛЛА\")\n",
        "print(\"=\" * 30)\n",
        "\n",
        "simulations = [5, 10, 15, 20, 25]\n",
        "\n",
        "print(\"\\nСмена выбора:\")\n",
        "for count in simulations:\n",
        "    result = monty_hall_simulation(count, True)\n",
        "    print(f\"Попыток: {count} - Выигрышей: {result:.1f}%\")\n",
        "\n",
        "print(\"\\nБез смены выбора:\")\n",
        "for count in simulations:\n",
        "    result = monty_hall_simulation(count, False)\n",
        "    print(f\"Попыток: {count} - Выигрышей: {result:.1f}%\")\n",
        "\n",
        "print(\"\\nВЫВОД: Смена выбора увеличивает шансы на выигрыш!\")"
      ],
